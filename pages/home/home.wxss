/* pages/home/home.wxss */
page {
  background-color: #eee;
}
swiper {
  width: 750rpx;
  height: 360rpx;
}
swiper image {
  width: 100%;
  height: 100%;
}

/* 九宫格 */
.grids {
  display: flex;
  flex-wrap: wrap;
  background-color: #fff;
  border-top: 1px solid #ccc;
  border-left: 1px solid #ccc;
  box-sizing: border-box;

}
.grids .grids-item {
  width: 33.33%;
  height: 250rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-right: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
  box-sizing: border-box;
  vertical-align: middle;
  padding-top: 43rpx;
}
.grids .grids-item image {
  width: 102rpx;
  height: 102rpx;
  vertical-align: middle;
}

/* 友情链接 */
.links {
  display: flex;
  justify-content: space-around;
  margin: 10rpx 0;
  background-color: #fff;
}
.links image {
  width: 330rpx;
  height: 180rpx;
  padding: 20rpx 30rpx;
  vertical-align: middle;
}