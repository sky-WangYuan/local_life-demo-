  indicator-dots="{{true}}" 
  autoplay="{{true}}" 
  interval="{{2000}}" 
  duration="{{1000}}"
  circular="{{true}}"
  >
    <swiper-item>
      <image src="../../assets/images/banner-01.png"></image>
    </swiper-item>
    <swiper-item>
       <image src="../../assets/images/banner-02.png"></image>
     </swiper-item>
</swiper>
<!-- 九宫格 -遍历循环每一项 -->
<view class="grids" >
  <navigator url="/pages/list/list?id={{item.id}}&name={{item.name}}"  class="grids-item" wx:for='{{gridsList}}' wx:key="id">
    <image src="{{item.icon}}"></image>
    <text>{{item.name}}</text>
  </navigator>
</view>

